@using VehicleReservationSystem.Domain.VehicleManagement
@using VehicleReservationSystem.WebUI.Models
@model IEnumerable<VehicleTypeModel>
@{
    ViewBag.Title = "Manage Types";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    AlertModel alert = TempData["AlertMessage"] as AlertModel;
    ViewBag.Notify = new VehiclesHandlers().GetAllNotifications() as List<VehicleReservationSystem.Domain.VehicleManagement.Booking>;

}

@if (alert != null)
{
    @Html.Partial("~/Views/Shared/_AlertView.cshtml", alert)
}

<div class="modal fade" id="mydialog" tabindex="-1" role="dialog" aria-labelledby="mydialog-label">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="mydialog-title">title here</h4>
            </div>
            <div id="mydialog-body" class="modal-body">
                
            </div>
        </div>
    </div>
</div>


<div class="space" style="margin-top:70px;">
    <table class="table table-bordered">
        <thead>
            <tr class="bg-primary">
                <th colspan="2"><span class="glyphicon glyphicon-tags"></span> &nbsp; Manage Types [ <a id="create" style="color:white;" href="/types/create">   Add New</a> ] </th>
            </tr>
            <tr class="bg-primary">
                <th class="col-lg-7">Name</th>
                <th class="col-lg-5">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var m in Model)
                {
                    <tr>
                        <td class="col-lg-7">@m.Name</td>
                        <td class="col-lg-5">
                            <button type="button" class="btn btn-xs btn-warning dgbtn-edit" data-typeid="@m.Id"><span class="glyphicon glyphicon-edit"></span> </button>
                            <button type="button" class="btn btn-xs btn-danger dgbtn-delete" data-typeid="@m.Id"><span class="glyphicon glyphicon-trash"></span> </button>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
    </div>
    @section myscript{

        <script type="text/javascript">

            $(function () {
                $("tbody").css("color", "white");
                $("#create").click(function (event) {
                    event.preventDefault();
                    $.ajax(

                        {
                            url: "/types/create"
                        }

                    ).done(function (createform) {
                        $("#mydialog-title").html("<span class='glyphicon glyphicon-tags'></span> Add Vehicle Type");
                        $("#mydialog-body").html(createform);
                        $("#mydialog").modal();
                    });

                });



                $(".dgbtn-delete").click(function (event) {
                    event.preventDefault();
                    var tid = $(this).data("typeid");
                    $("#mydialog-title").html("Delete Vehicle Type");
                    $("#mydialog-body").html("<h3>Do you want to delete this record?</h3>");

                    $("#mydialog-body").append(" <button id='yes' type='submit' class='btn pull- right'>Yes</button>");
                    $("#mydialog-body").append(" <button id ='cancel'type='reset' class='btn pull- right'>No</button>");
                    $("#mydialog").modal();
                    $("#yes").click(function () {
                        $.ajax({
                            url: "/types/delete/" + tid,
                            type: "post",
                            success: function (data) {
                                window.location.href = data;
                            }
                        });

                    });

                    $("#cancel").click(function () {
                        location.reload();

                    });

                });


                $(".dgbtn-edit").click(function (event) {
                    event.preventDefault();
                    var tid = $(this).data("typeid");
                    $.ajax(
                        {
                            url: "/types/edit/" + tid
                        }
                    ).done(function (editform) {
                        $("#mydialog-title").html("<span class='glyphicon glyphicon-edit'></span> Edit Vehicle Type");
                        $("#mydialog-body").html(editform);
                        $("#mydialog").modal();
                    });
                });


            });


        </script>




    }



