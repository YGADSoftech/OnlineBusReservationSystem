
@using (Html.BeginForm("create", "routes", FormMethod.Post, new { id = "ceatedeptform", enctype = "multipart/form-data" }))
{
    <div class="form-group form-inline">
        <div class="input-group">
            <span class="input-group-addon"><span class="glyphicon glyphicon-tags"></span></span>
        </div>
        <div id="origindiv" class="input-group">

            @Html.DropDownList("Origin", (IEnumerable<SelectListItem>)ViewBag.Cities, "- Select Origin -", new { @class = "form-control" })
        </div>
        <div id="destinationdiv" class="input-group">

            @Html.DropDownList("Dest", (IEnumerable<SelectListItem>)ViewBag.Cities, "- Select Destination -", new { @class = "form-control" })
        </div>
    </div>
    

        <div class="form-group">
            <div class="input-group has-feedback">
                <span class="input-group-addon"><span class="glyphicon glyphicon-edit"></span></span>
                @Html.TextBox("Price",null, new { @class = "form-control", placeholder = "Enter Price", type = "number" })
                <span class="form-control-feedback"></span>
            </div>
        </div>

      

        <div class="form-group">
            <div class="input-group has-feedback">
                <span class="input-group-addon"><span class="glyphicon glyphicon-edit"></span></span>
                @Html.TextBox("TravelTime",null, new { @class = "form-control", placeholder = "Enter TravelTIme", type = "TimeSpan" })
                <span class="form-control-feedback"></span>
            </div>
        </div>
        
        <div class="form-group">
            <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-log-in"></span>  Save</button>
        </div>
        }




