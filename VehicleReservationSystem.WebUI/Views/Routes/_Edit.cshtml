@using VehicleReservationSystem.Domain.VehicleManagement
@model VehicleReservationSystem.Domain.VehicleManagement.Route

@using (Html.BeginForm("edit", "routes", FormMethod.Post, new { id = "ceatedeptform", enctype = "multipart/form-data" }))
{
    <input name="id" type="hidden" value="@Model.Id" />

    <h4>Select Origin</h4>
    <div class="form-group">

        <div class="input-group">
            <span class="input-group-addon"><span class="glyphicon glyphicon-tags"></span></span>
            <select class="form-control" name="Origin">
                <option value="@Model.Origin.Id">@Model.Origin.Name</option>
                @foreach (var o in (IEnumerable<City>)ViewBag.Cities)
                {
                    <option value="@o.Id">@o.Name</option>

                }

            </select>
            <span class="form-control-feedback"></span>
        </div>
    </div>

        <h4>Select Destination</h4>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-tags"></span></span>
                <select class="form-control" name="Destination">
                    <option value="@Model.Destination.Id">@Model.Destination.Name</option>
                    @foreach (var d in (IEnumerable<City>)ViewBag.Cities)
                    {
                        <option value="@d.Id">@d.Name</option>
                    }
                </select>
                <span class="form-control-feedback"></span>
            </div>



        </div>

            <div class="form-group">
                <div class="input-group has-feedback">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-edit"></span></span>
                    @Html.TextBox("Price", Model.Price, null, new { @class = "form-control", placeholder = "Enter Price", type = "number" })
                    <span class="form-control-feedback"></span>
                </div>
            </div>



            <div class="form-group">
                <div class="input-group has-feedback">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-edit"></span></span>
                    @Html.TextBox("TravelTime", Model.TravelTime, null, new { @class = "form-control", placeholder = "Enter TravelTIme", type = "TimeSpan" })
                    <span class="form-control-feedback"></span>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-log-in"></span>  Update</button>
            </div>
}





