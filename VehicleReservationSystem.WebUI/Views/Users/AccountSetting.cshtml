
@using VehicleReservationSystem.Domain.VehicleManagement
@using VehicleReservationSystem.Domain.UserManagement
@model VehicleReservationSystem.Domain.UserManagement.User
@using VehicleReservationSystem.WebUI.Models

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    User currentUser = Session[WebUtil.CURRENT_USER] as User;
    ViewBag.Title = "AccountSetting";
    AlertModel alert = TempData["AlertMessage"] as AlertModel;
    ViewBag.Notify = new VehiclesHandlers().GetAllNotifications() as List<VehicleReservationSystem.Domain.VehicleManagement.Booking>;


}
@if (alert != null)
{
    @Html.Partial("~/Views/Shared/_AlertView.cshtml", alert)
}

<div class="container-fluid" style="margin-top:5px; margin-left:-10px;">

    <div class="" style="background-color:cornflowerblue">
        <h3 style="color:white; padding:5px">
            <span class=" glyphicon glyphicon-user"></span> Update Profile
        </h3>
    </div>
    <div class="form-group">
        @using (Html.BeginForm("accountsetting", "users", FormMethod.Post, new { enctype = "multipart/form_data" }))
        {
            <input value="@currentUser.Id" name="id" type="hidden" />
            <div class="container-fluid">
                <h4 style="color:white;">First name</h4>
                @Html.TextBox("FirstName", currentUser.FistName, new { @class = "form-control center block" })
            </div>
            <div class="container-fluid">
                <h4 style="color:white;">Last name</h4>
                @Html.TextBox("LastName", currentUser.LastName, new { @class = "form-control center block" })
            </div>
            <div class="container-fluid">
                <h4 style="color:white;">Contact number</h4>
                @Html.TextBox("phoneno", currentUser.PhoneNumber, new { @class = "form-control center block" })
            </div>

          
            <div class="form-group" style="margin-top:20px; margin-left:12px;" >
                <button type="submit" class="btn btn" style="background-color:cornflowerblue;color:white;"><span class="glyphicon glyphicon-log-in"></span>  Update</button>
            </div>
        }
    </div>
 </div>
 








