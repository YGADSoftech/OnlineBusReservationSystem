
@using VehicleReservationSystem.Domain.UserManagement
@model VehicleReservationSystem.Domain.UserManagement.User



@using (Html.BeginForm("edit", "users", FormMethod.Post, new { id = "ceatedeptform", enctype = "multipart/form-data" }))
{
    <input type="hidden" name="id" value="@Model.Id" />


    <div class="form-group">
        <div class="input-group has-feedback">
            <span class="input-group-addon"><span class="glyphicon glyphicon-edit"></span></span>
            @Html.TextBox("FirstName",Model.FistName, new { @class = "form-control", placeholder = "Enter First Name" })
            <span class="form-control-feedback"></span>
        </div>
    </div>




    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><span class="glyphicon glyphicon-tags"></span></span>
            @Html.TextBox("LastName", Model.LastName, new { @class = "form-control", placeholder = "Enter Last Name" })
        </div>
    </div>



    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><span class="glyphicon glyphicon-tags"></span></span>
            @Html.TextBox("Email", Model.Email, new { @class = "form-control", placeholder = "Enter Email" })
        </div>
    </div>

    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><span class="glyphicon glyphicon-tags"></span></span>
            @Html.TextBox("UserName", Model.LoginId, new { @class = "form-control", placeholder = "Enter UserName" })
        </div>
    </div>


    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><span class="glyphicon glyphicon-tags"></span></span>
            @Html.TextBox("Password",Model.Password, new { @class = "form-control", placeholder = "Enter Password" })
        </div>
    </div>

    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><span class="glyphicon glyphicon-tags"></span></span>
            @Html.TextBox("phoneno", Model.PhoneNumber, new { @class = "form-control", placeholder = "Enter Contact Number" })
        </div>
    </div>


    <label>Select User Status</label>
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><span class="glyphicon glyphicon-tags"></span></span>
            <select class="form-control" name="isActive">
                <option value="@Model.Id">@(@Model.Is_Active == true ? "Yes" : "No")</option>
                <option value="False">No</option>
                <option value="True">Yes</option>
            </select>
        </div>
    </div>






    <div class="form-group">
        <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-log-in"></span>  Update</button>
    </div>
}




